// src/infrastructure/persistence/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change this to "postgresql" via ENV in prod, or keep dynamic logic
  url      = env("DATABASE_URL")

}

model User {
  id        String   @id // UUID strings
  email     String   @unique
  password  String
  role      String   // Storing Enum as string for flexibility
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  properties Property[] // Relation
  refreshTokens RefreshToken[]

  @@map("users") // Best practice: lowercase table names in Postgres
}
model RefreshToken {
  id        String   @id @default(uuid())
  tokenHash String   // We store the Hash, not the plain token
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refresh_tokens")
}
model Property {
  id          String   @id
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  title       String
  description String
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("properties")
}